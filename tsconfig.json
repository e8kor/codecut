{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "jsx": "react",
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "newLine": "LF"
    },
    "compileOnSave": false,  
    "include": [  
        "src/**/*.ts",
        "src/**/*.tsx"
    ],  
    "exclude": [  
        "node_modules"  
    ]
}